<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="10dp"
        android:clipChildren="false"
        >
        <ImageView
            android:id="@+id/img_top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="-3dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/layout_msg_ltk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_top_left"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:visibility="visible"
                android:orientation="horizontal"
                android:background="@mipmap/liaotian"
                android:paddingRight="22dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                <ImageView
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    android:id="@+id/imgVip"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/huizhang"
                    android:layout_width="33dp"
                    android:layout_height="13dp" />
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imgHz"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/icon_cut_down_stone"
                    android:adjustViewBounds="true"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/textName"
                    android:layout_gravity="center_vertical"
                    android:text="小明"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="："
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/textDec"
                    android:text="哈哈23哈哈哈哈sdfsd哈哈哈哈"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_bottom_right"
            android:layout_width="43dp"
            android:layout_height="30dp"
            android:layout_below="@+id/layout_msg_ltk"
            android:layout_alignRight="@+id/layout_msg_ltk"
            android:layout_marginRight="-21dp"
            android:layout_marginTop="-15dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:visibility="gone"
            />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll2"
        android:visibility="gone"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:paddingTop="3dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="gone"
            android:scaleType="fitXY"
            android:id="@+id/imgVip2"
            android:src="@mipmap/huizhang"
            android:layout_marginRight="5dp"
            android:layout_width="33dp"
            android:layout_height="13dp" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/imgHz2"
            android:layout_marginRight="5dp"
            android:src="@mipmap/huizhang"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textName2"
            android:text="小明"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textName3"
            android:text="进入直播间"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:layout_marginRight="30dp"
        android:id="@+id/ll3"
        android:background="@mipmap/liaotian"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:layout_marginTop="3dp"
        android:paddingTop="3dp"
        android:gravity="center_vertical"
        android:paddingBottom="3dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textNameGift1"
            android:text="小明"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="送给"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textNameGift2"
            android:text="哈哈"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_marginRight="5dp"
            android:id="@+id/imgGift"
            android:layout_width="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/gift_size"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textNum"
            tools:text="x10"
            android:textSize="25sp"
            android:textColor="#FFD452"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:visibility="gone"
        android:background="@mipmap/liaotian"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_just_tip"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_gonggao"
        android:background="@mipmap/liaotian"
        android:text="公告欢迎来到谁的房间"
        android:textColor="#ff3e6d"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:paddingTop="3dp"
        android:gravity="center_vertical"
        android:paddingBottom="3dp"
        android:textSize="12sp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:paddingRight="10dp"
        android:layout_height="wrap_content" />

</FrameLayout>
